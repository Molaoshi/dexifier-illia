{
  "compilerOptions": {
    "noEmitOnError": false,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noImplicitAny": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@rango-dev/ui": ["node_modules/@rango-dev/ui/dist/widget/ui/src/index.d.ts"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "postcss.config.js", "./src/embedded/global-env.d.ts"],
  "exclude": ["node_modules"]
}
